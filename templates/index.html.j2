{% extends "_base.html.j2" %}

{% block title %}
tiny PALACE
{% endblock %}

{% block content %}
<ul id="artistlist">
  {% for alphabet,artist_group in sorted_by_name %}
  <li>
    <h3>{{ alphabet }}</h3>
    <ul class="artist-group">
    {% for artist in artist_group %}
      <li class="artist" data-alphabet="{{ artist.alphabet }}">
        <h4 class="{{ " ".join(artist.tags) }}">
          <a href="/artist/{{ artist.slug }}/" target="_blank">{{ artist.name }}</a>
        </h4>
      </li>
    {% endfor %}
    </ul>
  </li>
{% endfor %}
</ul>

{% endblock %}
